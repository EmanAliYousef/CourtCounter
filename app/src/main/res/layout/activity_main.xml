<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/ball2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="2"

        >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:id="@+id/team_id"

       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:id="@+id/team_score"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_threePoints"
        android:text="+3Points"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:onClick="add_3Points"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_twoPoints"
        android:text="+2Points"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:onClick="add_2Points"
      />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Free_point"
        android:text="Free_point"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:onClick="free_Point"
      />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
      >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:id="@+id/teamB_id"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:id="@+id/teamBscore_id"


            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_threePointsToTeamB"
            android:text="+3Points"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:onClick="add_3PointsTeamB"


            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_twoPointsTeamB"
            android:text="+2Points"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:onClick="add_2PointsTeamB"
          />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Free_ThrowTeamB"
            android:text="Free_point"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:onClick="free_PointTeamB"
          />



    </LinearLayout>


</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ResetScoreB"
        android:text="Reset_Score"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="60dp"
        android:layout_weight="1"
        android:onClick="resetScore"
        />


</LinearLayout>